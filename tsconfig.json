{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "esnext.asynciterable", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@fortawesome/fontawesome-common-types": [
				"./node_modules/@fortawesome/fontawesome-common-types/index"
			]
		}
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/enzyme/setup.ts",
		"__mocks__"
	],
	"include": [
		"typings/**/*.d.ts",
		"src/**/*"
	]
}
