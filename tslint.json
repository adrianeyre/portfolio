{
	"extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts",
			"coverage/lcov-report/*.js",
			"src/setupTests.ts"
		]
	},
	"rules": {
		"object-literal-sort-keys": false,
		"curly": false,
		"no-console": false,
		"ordered-imports": false,
		"jsx-no-lambda": false
	},
	"jsRules": {
		"object-literal-sort-keys": false,
		"curly": false,
		"no-console": false
	}
}
